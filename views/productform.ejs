<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

    <title>Product Order Form</title>
</head>

<body>
    <%- include('partials/navbar') %>

        <div class="px-5 py-5 fw-lighter">
            <h1 id="Data" class="fs-3">Product Order Form</h1>
            <p>
                Please complete the form below. We're looking forward to contacting you for your order!
            </p>

            <!-- Alert to show login requirement -->
            <div id="loginAlert" class="alert alert-danger d-none" role="alert">
                You need to log in to perform this action.
            </div>

            <form class="needs-validation" novalidate id="orderForm" method="POST" action="/submit-product-form">
                <div class="container-fluid bg-secondary-subtle py-2 mb-3">
                    <!-- User Details -->
                    <div class="row my-4">
                        <label for="firstname" class="col-sm-2 form-label">Firstname:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="firstname" name="firstname" required>
                            <div class="invalid-feedback">Please provide your first name.</div>
                        </div>
                    </div>

                    <div class="row my-4">
                        <label for="surname" class="col-sm-2 form-label">Surname:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="surname" name="surname" required>
                            <div class="invalid-feedback">Please provide your surname.</div>
                        </div>
                    </div>

                    <div class="row my-4">
                        <label for="email" class="col-sm-2 form-label">Email:</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="email" name="email" required>
                            <div class="invalid-feedback">Please provide a valid email address.</div>
                        </div>
                    </div>

                    <div class="row my-4">
                        <label for="address" class="col-sm-2 form-label">Address:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="address" name="address" required>
                            <div class="invalid-feedback">Please provide your address.</div>
                        </div>
                    </div>

                    <div class="row my-4">
                        <label for="phone" class="col-sm-2 form-label">Mobile:</label>
                        <div class="col-sm-10">
                            <input type="tel" class="form-control" id="phone" name="phone" pattern="[0-9]{10}" required>
                            <div class="invalid-feedback">Please provide a valid 10-digit mobile number.</div>
                        </div>
                    </div>

                    <!-- Cake Selection -->
                    <div class="row my-4">
                        <label class="col-sm-2">Cake:</label>
                        <div class="col-sm-10">
                            <select name="cake" id="cake" class="form-select" required>
                                <option value="" disabled selected>Select a cake</option>
                                <% products.forEach(product=> { %>
                                    <option value="<%= product.name %>">
                                        <%= product.name %>
                                    </option>
                                    <% }) %>
                            </select>
                            <div class="invalid-feedback">Please select a cake.</div>
                        </div>
                    </div>

                    <!-- Cake Size -->
                    <div class="row my-4">
                        <label class="col-sm-2">Cake Size:</label>
                        <div class="col-sm-10">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="cake_size" id="size6" value="6" required>
                                <label class="form-check-label" for="size6">6 inch</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="cake_size" id="size8" value="8" required>
                                <label class="form-check-label" for="size8">8 inch</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="cake_size" id="size10" value="10" required>
                                <label class="form-check-label" for="size10">10 inch</label>
                            </div>
                            <div class="invalid-feedback">Please select a cake size.</div>
                        </div>
                    </div>

                    <!-- Accompaniment -->
                    <div class="row my-4">
                        <label class="col-sm-2">Accompaniment:</label>
                        <div class="col-sm-10">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="accompaniment" id="candles" value="Candles"
                                    required>
                                <label class="form-check-label" for="candles">Candles</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="accompaniment" id="hats"
                                    value="Birthday Hats" required>
                                <label class="form-check-label" for="hats">Birthday Hats</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="accompaniment" id="box" value="Birthday Box"
                                    required>
                                <label class="form-check-label" for="box">Birthday Box</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="accompaniment" id="bow" value="Bow" required>
                                <label class="form-check-label" for="bow">Bow</label>
                            </div>
                            <div class="invalid-feedback">Please select an accompaniment.</div>
                        </div>
                    </div>

                    <!-- Pickup Date -->
                    <div class="row my-4">
                        <label for="pickup_date" class="col-sm-2 form-label">Pickup Date:</label>
                        <div class="col-sm-10">
                            <input type="date" class="form-control" id="pickup_date" name="pickup_date" required>
                            <div class="invalid-feedback">Please select a pickup date.</div>
                        </div>
                    </div>

                    <!-- Other Request -->
                    <div class="row my-4">
                        <label for="other_request" class="col-sm-2">Other Request:</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" id="other_request" name="other_request"
                                style="height: 100px"></textarea>
                        </div>
                    </div>

                    <!-- Promotion -->
                    <div class="row my-4">
                        <label class="col-sm-2"></label>
                        <div class="col-sm-10">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="send_promotion" name="send_promotion">
                                <label class="form-check-label" for="send_promotion">Yes, please also send me
                                    promotions!</label>
                            </div>
                        </div>
                    </div>

                    <!-- Submit and Reset -->
                    <div class="row my-4">
                        <label class="col-sm-2"></label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary" type="submit">Submit</button>
                            <button class="btn btn-secondary" type="reset">Reset</button>
                        </div>
                    </div>
                </div>
            </form>

            <!-- Success Message -->
            <div id="successMessage" class="alert alert-success mt-4 d-none" role="alert">
                Order submitted successfully!
            </div>
        </div>


        <%- include('partials/footer') %>

            <!-- Bootstrap Bundle with Popper -->
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

            <!-- Script for form validation and login check -->
            <script>
                const form = document.getElementById('orderForm');
                const successMessage = document.getElementById('successMessage');
                const loginAlert = document.getElementById('loginAlert');

                form.addEventListener('submit', async function (event) {
                    event.preventDefault();

                    // Check login status
                    const loggedInUser = localStorage.getItem('loggedInUser');
                    if (!loggedInUser) {
                        loginAlert.classList.remove('d-none'); // Show login alert
                        return;
                    }

                    if (!form.checkValidity()) {
                        form.classList.add('was-validated');
                        return;
                    }

                    const formData = new FormData(form);
                    const payload = Object.fromEntries(formData.entries());

                    try {
                        const response = await fetch('/submit-product-form', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(payload),
                        });

                        if (response.ok) {
                            successMessage.classList.remove('d-none');
                            form.reset();
                            form.classList.remove('was-validated');
                            setTimeout(() => successMessage.classList.add('d-none'), 3000);
                        } else {
                            const result = await response.json();
                            alert(result.message || 'An error occurred. Please try again.');
                        }
                    } catch (error) {
                        console.error('Error submitting form:', error);
                        alert('Failed to submit the form. Please try again later.');
                    }
                });

                form.addEventListener('reset', function () {
                    form.classList.remove('was-validated');
                    loginAlert.classList.add('d-none');
                });
            </script>
</body>

</html>
